@using System.Web.Optimization
@model IEnumerable<TestTask_Intetics_.Models.Order>

<!DOCTYPE html>

<html>
<head>
    @Scripts.Render("~/scripts/jquery-1.7.1.js")
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
    <meta name="viewport" content="width=device-width"/>
    <title>Index</title>
</head>
<body>
    <div>
        @using (Ajax.BeginForm("OrderSearch", new AjaxOptions {UpdateTargetId = "results"}))
        {
            <input type="text" name="firstLastName"/>
            <input type="submit" value="Find"/>
        }
    </div>
<div id="results">
    @Html.Partial("OrderSearch", Model);
</div>
</body>
</html>
