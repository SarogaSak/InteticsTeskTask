@model IEnumerable<TestTask_Intetics_.Models.Order>

<div id="searchresults">
    @if (@Model.Count() != 0)
    {
        <table>
            <tr>
                <td>
                    <p>Name</p></td>
                <td>
                    <p>Car</p></td>
                <td>
                    <p>Status</p></td>
                <td></td>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <p><a href="/Home/ClientCard/@item.Id">@item.Car.Client.Name @item.Car.Client.Surname</a>
                        </p>
                    </td>
                    <td>
                        <p>@item.Car.Model.Make.Name @item.Car.Model.Name</p>
                    </td>
                    <td>
                    <p>@item.OrderStatus.Value</p>
                    <td>
                </tr>
            }
        </table>
    }
    else
    {
        <div>
            <p>Not found</p>
            <p><a href="/Home/ClientCard/0">New client card</a>
        </div>
    }
</div>
